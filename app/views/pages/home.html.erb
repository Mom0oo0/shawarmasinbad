<header class="hero-section hero-home">
  <div class="container">
    <span class="hero-subtitle"><%= t('hero.subtitle') %></span>
    <h1 class="hero-headline"><%= t('hero.headline_html') %></h1>
    
    <div class="hero-cta">
      <p style="max-width: 600px; margin: 0 auto 3rem auto; font-size: 1.4rem; font-weight: 400; color: rgba(255,255,255,0.9); text-shadow: 0 1px 2px rgba(0,0,0,0.5);">
        <%= t('hero.description') %>
      </p>
      <%= link_to t('hero.view_menu'), menu_path, class: "btn-hero-primary" %>
      <%= link_to t('hero.our_history'), history_path, class: "btn-hero-outline", style: "margin-left: 1rem;" %>
    </div>
  </div>
</header>


<section class="container" style="padding-top: 10rem; padding-bottom: 6rem;">
  <div class="divider-ornament">✻</div>
  
  <div style="text-align: center; max-width: 800px; margin: 0 auto;">
    <h2 style="font-size: 3rem; margin-bottom: 2rem; border: none; color: var(--color-text-primary);"><%= t('home.journey_title') %></h2>
    <p style="font-size: 1.25rem; line-height: 1.8; font-family: var(--font-heading);">
      "<%= t('home.journey_text') %>"
    </p>
    <div style="margin-top: 2rem; color: var(--color-accent-red); font-weight: 700; letter-spacing: 0.1em; text-transform: uppercase;">— The Family</div>
  </div>

  <div class="divider-ornament">✻</div>
</section>

<section class="container" style="padding-bottom: 8rem;">
  <div class="section-header">
    <div>
      <h3 style="font-size: 2.5rem; margin-bottom: 0.5rem; color: var(--color-text-primary);"><%= t('home.signature_dishes') %></h3>
      <p style="margin: 0;"><%= t('home.signature_subtitle') %></p>
    </div>
    <%= link_to "#{t('home.view_full_menu')} →", menu_path, style: "font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 5px;" %>
  </div>

  <div class="menu-grid">
    <!-- Beef Kabab -->
    <div class="menu-card">
      <div class="menu-card-image">
        <%= image_tag "beef-kabab.png", alt: t('home.beef_kabab_title') %>
      </div>
      <div class="menu-card-content">
        <span class="price-tag">$22.99</span>
        <h4><%= t('home.beef_kabab_title') %></h4>
        <p><%= t('home.beef_kabab_desc') %></p>
      </div>
    </div>

    <!-- Chicken Plate -->
    <div class="menu-card">
       <div class="menu-card-image">
         <%= image_tag "chicken-plate.png", alt: t('home.chicken_plate_title') %>
      </div>
      <div class="menu-card-content">
        <span class="price-tag">$20.49</span>
        <h4><%= t('home.chicken_plate_title') %></h4>
        <p><%= t('home.chicken_plate_desc') %></p>
      </div>
    </div>
  </div>
</section>
