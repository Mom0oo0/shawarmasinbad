<div class="hero-section" style="padding: 2rem 0; min-height: 30vh;">
  <div class="container">
    <h1 class="hero-headline" style="font-size: 3.5rem; margin-bottom: 0.5rem;"><%= t('gallery.title') %></h1>
    <span class="hero-subtitle" style="margin-bottom: 0;"><%= t('gallery.subtitle') %></span>
  </div>
</div>

<div class="container" style="padding: 4rem 1.5rem 6rem;">
  <div class="gallery-grid">
    <% 1.upto(10) do |i| %>
      <div class="gallery-item">
        <%= image_tag "image#{i}.png", alt: "Sinbad Gallery #{i}", loading: "lazy" %>
      </div>
    <% end %>
  </div>
</div>
