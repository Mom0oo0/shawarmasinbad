<% if @menu_items.present? && @menu_items.any? %>
  <% ["sandwiches", "trios", "plates", "family", "starters", "drinks"].each do |category| %>
    <% items = @menu_items[category] %>
    <% if items.present? %>
      <div class="divider-ornament"><%= t("menu.sections.#{category}", default: category.humanize) %></div>
      <div class="menu-grid">
        <% items.each do |item| %>
          <div class="menu-card">
            <div class="menu-card-content">
              <% if item.price_small.present? && item.price_large.present? %>
                <span class="price-tag"><%= t('menu.small_tag') %>: $<%= number_with_precision(item.price_small, precision: 2) %> | <%= t('menu.large_tag') %>: $<%= number_with_precision(item.price_large, precision: 2) %></span>
              <% elsif item.price_large.present? %>
                <span class="price-tag">$<%= number_with_precision(item.price_large, precision: 2) %></span>
              <% elsif item.price_small.present? %>
                <span class="price-tag">$<%= number_with_precision(item.price_small, precision: 2) %></span>
              <% end %>
              <h4><%= (I18n.locale == :fr ? item.title_fr : item.title_en).html_safe %></h4>
              <% desc = (I18n.locale == :fr ? item.description_fr : item.description_en) %>
              <% if desc.present? %>
                <p><%= desc %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
