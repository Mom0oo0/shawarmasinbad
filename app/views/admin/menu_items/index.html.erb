<div class="container" style="padding: 50px 0;">
  <h1>Menu Items</h1>
  <%= link_to 'New Item', new_admin_menu_item_path, class: "btn-primary", style: "margin-bottom: 20px; display: inline-block;" %>

  <table style="width: 100%; border-collapse: collapse;">
    <thead>
      <tr style="text-align: left; background: #f0f0f0;">
        <th style="padding: 10px;">Category</th>
        <th style="padding: 10px;">Title (EN)</th>
        <th style="padding: 10px;">Price L</th>
        <th style="padding: 10px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @menu_items.each do |item| %>
        <tr style="border-bottom: 1px solid #ddd;">
          <td style="padding: 10px;"><%= item.category %></td>
          <td style="padding: 10px;"><%= item.title_en %></td>
          <td style="padding: 10px;"><%= item.price_large %></td>
          <td style="padding: 10px;">
            <%= link_to 'Edit', edit_admin_menu_item_path(item) %> | 
            <%= link_to 'Delete', admin_menu_item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, style: "color: red;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to "Back to Dashboard", admin_dashboard_path %>
</div>
